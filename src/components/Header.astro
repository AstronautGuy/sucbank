---
import { Image } from 'astro:assets';
import Logo from '../assets/logo.jpg';
import mappin from '../assets/mappin.svg';
import "../styles/global.css";
---

<header class="absolute">
	<div class="bg-[#eaddca] h-20 w-screen flex items-center justify-between px-4">
		<div>
			<a href="/">
				<Image src={Logo} alt="Logo" class="h-20 w-20" loading="eager"/>
			</a>
		</div>
		<nav class="flex space-x-4">
			<a href="/" class="text-gray-800 hover:text-red-600 hover:scale-125 transition-all duration-300">Home</a>
			<a href="/about" class="text-gray-800 hover:text-red-600 hover:scale-125 transition-all duration-300">About</a>
			<a href="/contact" class="text-gray-800 hover:text-red-600 hover:scale-125 transition-all duration-300">Contact</a>
			<a href="/contact" class="text-gray-800"><Image src={mappin} alt="mappin" loading={"eager"}/></a>
		</nav>
	</div>
	<div class="scroll-container">
      <span class="scrolling-text">
		  Welcome to the Sevalia urban cooperative bank. We hope u have a great experience with us.ğŸ™
	  </span>
	</div>

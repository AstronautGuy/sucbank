---
import { Image } from 'astro:assets';
import Logo from '../assets/logo.jpg';
import mappin from '../assets/mappin.svg';
---

<header class="absolute top-0 left-0 w-screen z-10 bg-[#eaddca]">
	<!-- Navbar -->
	<div class="h-20 px-6 w-full max-w-7xl mx-auto flex items-center justify-between">
		<a href="/">
			<Image src={Logo} alt="Sevalia Bank Logo" width={80} height={80} class="rounded-full" loading="eager" />
		</a>
		<nav class="flex gap-6 items-center">
			<a href="/" class="text-gray-800 hover:text-red-600 hover:scale-110 transition-all duration-300">Home</a>
			<a href="/about" class="text-gray-800 hover:text-red-600 hover:scale-110 transition-all duration-300">About</a>
			<a href="/contact" class="text-gray-800 hover:text-red-600 hover:scale-110 transition-all duration-300">Contact</a>
			<a href="/contact" class="text-gray-800 hover:scale-110 transition-transform">
				<Image src={mappin} alt="Map Pin" width={24} height={24} loading="eager" />
			</a>
		</nav>
	</div>

	<!-- Scrolling Text -->
	<div class="scroll-container w-full bg-[#d6c1aa] py-2 overflow-hidden whitespace-nowrap text-center">
    <span class="scrolling-text animate-marquee text-[15px] font-medium text-gray-700">
      Welcome to the Sevalia Urban Cooperative Bank. We hope you have a great experience with us. ğŸ™
    </span>
	</div>
</header>
